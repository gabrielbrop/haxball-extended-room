{
    "compilerOptions": {
        "strict": true,
        "target": "ES2015",
        "lib": ["DOM", "esnext"],
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true
    },
    "files": [
        "src/types.ts",
        "src/headless.ts",
        "src/index.ts"
    ],
}